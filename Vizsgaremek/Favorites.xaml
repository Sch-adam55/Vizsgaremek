<Window x:Class="Vizsgaremek.Favorites"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kedvencek" Height="690" Width="800" Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Grid.Row="0" Margin="0">
            <TextBlock Text="Kedvencek" Foreground="Blue" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"/>
        </Border>

        <ListBox x:Name="FavoritesList" Grid.Row="1" Background="DarkGray">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                       
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Background="White" Margin="0,589,0,0" Height="38" VerticalAlignment="Top" Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Kezdőoldal" Background="White" Foreground="Blue" Margin="5" Height="28" Click="OpenFooldal_Click"/>
                <Button Content="Kedvencek" Background="White" Foreground="Blue" Margin="5" Height="28"/>
                <Button Content="Profil" Background="White" Foreground="Blue" Margin="5" Height="28" Click="OpenProfile_Click"/>
                <Button Content="Kereső" Background="White" Foreground="Blue" Margin="5" Height="28"/>
                <Button Content="Menü" Background="White" Foreground="Blue" Margin="5" Height="28"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
