<Window x:Class="Vizsgaremek.Favorites"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kedvencek" Height="400" Width="600" Background="DarkGray">
    <Grid Margin="0,341,0,0">
        <Border Background="White" Grid.Row="0" Margin="0,-341,0,341">
            <TextBlock Text="MangaHorizon" Foreground="Blue" FontSize="20" 
           HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"/>
        </Border>
        
        <ScrollViewer>
            <StackPanel x:Name="FavoritesPanel"/>
        </ScrollViewer>
        <Border Background="White" Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Kezdőoldal" Background="White" Foreground="Blue" Margin="5" Height="28" Click="OpenFooldal_Click"/>
                <Button Content="Kedvencek" Background="White" Foreground="Blue" Margin="5" Height="28"/>
                <Button Content="Profil" Background="White" Foreground="Blue" Margin="5" Height="28" Click="OpenProfile_Click"/>
                <Button Content="Kereső" Background="White" Foreground="Blue" Margin="5" Height="28"/>
                <Button Content="Menü" Background="White" Foreground="Blue" Margin="5" Height="28"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
