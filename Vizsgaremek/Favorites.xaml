<Window x:Class="Vizsgaremek.Favorites"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kedvencek" Height="700" Width="800" Background="LightSteelBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="DarkGray" Grid.Row="0" Margin="0">
            <TextBlock Text="Kedvencek" Foreground="LightSkyBlue" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"/>
        </Border>

        <ListBox x:Name="FavoritesListBox" HorizontalAlignment="Left" Background="DarkGray" Margin="10,37,10,563" Grid.Row="1">
        </ListBox>

        <Border Background="DarkGray" Margin="0,589,0,0" Height="38" VerticalAlignment="Top" Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Kezdőoldal" Background="White" Foreground="Black" Margin="5" Height="28" Click="OpenFooldal_Click"/>
                <Button Content="Kedvencek" Background="White" Foreground="Black" Margin="5" Height="28"/>
                <Button Content="Profil" Background="White" Foreground="Black" Margin="5" Height="28" Click="OpenProfile_Click"/>
                <Button Content="Menü" Background="White" Foreground="Black" Margin="5" Height="28"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
