<Window x:Class="Vizsgaremek.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bejelentkezés" Height="300" Width="400" Background="LightSteelBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="DarkGray" Grid.Row="0">
            <TextBlock Text="Profil" Foreground="LightSkyBlue" FontSize="20" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"/>
        </Border>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="197">
            <TextBlock Text="Felhasználónév" Foreground="Black" Margin="5,5,0,0"/>
            <TextBox Width="200" Height="25" Margin="5"/>
            <TextBlock Text="Jelszó" Foreground="Black" Margin="5,5,0,0"/>
            <TextBox Width="200" Height="25" Margin="5"/>
            <Button Content="Bejelentkezés" Width="100" Height="30" Background="White" Foreground="Black" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
