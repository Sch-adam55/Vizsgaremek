<Window x:Class="Vizsgaremek.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr.namespace:DotnetDocsSample"
        Title="Regisztráció" Height="300" Width="400" Background="LightSteelBlue">
    
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

        <Border Background="DarkGray" Grid.Row="0">
            <TextBlock Text="Regisztráció" Foreground="LightSkyBlue" FontSize="20" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"/>
		</Border>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,7,0,0" Grid.Row="1">
            <TextBlock Text="Email" Foreground="Black" Margin="5,5,0,0"/>
            <TextBox x:Name="EmailTextBox" Width="200" Height="25" Margin="5"/>
            <TextBlock Text="Felhasználónév" Foreground="Black" Margin="5,5,0,0"/>
            <TextBox x:Name="ProfileNameTextBox" Width="200" Height="25"  Margin="5"/>
            <TextBlock Text="Jelszó" Foreground="Black" Margin="5,5,0,0"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="25" Margin="5" />
            <Button Content="Regisztráció" Width="100" Height="30" Background="White" Foreground="Black" Margin="10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
