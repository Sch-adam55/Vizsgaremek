<Window x:Class="MangaHorizon.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regisztráció" Height="300" Width="400" Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Grid.Row="0">
            <TextBlock Text="Regisztráció" Foreground="Black" FontSize="20" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"/>
        </Border>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Regisztráció" Foreground="White" HorizontalAlignment="Center" Margin="10"/>
            <TextBox Width="200" Height="25" Text="Felhasználónév" Margin="5"/>
            <TextBox Width="200" Height="25" Text="Jelszó" Margin="5"/>
            <Button Content="Regisztráció" Width="100" Height="30" Background="White" Foreground="Black" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
